@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-4">

    @* Categories *@
    <div class="d-flex justify-content-center flex-wrap gap-2 mb-4">
        @foreach (var category in Model.Categories)
        {
            <a asp-action="Index" asp-route-category="@category.Name" class="btn btn-success mx-2">@category.Name</a>
        }
        <a asp-controller="Home" asp-action="Index"
           class="btn btn-outline-secondary fw-semibold px-4 py-2 shadow-sm">
            Усі товари
        </a>
    </div>

    @if (ViewBag.SelectedCategory != null)
    {
        <h3 class="text-center text-primary mb-4">
            Категорія: @ViewBag.SelectedCategory
        </h3>
    }

    @* Products *@
    <div class="row g-4">
        @foreach (var product in Model.ProductList.Products)
        {
            <partial name="_ProductCard" model="@product"> </partial>
        }
    </div>
</div>
<div class="mt-2 d-flex justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">

            <li class="page-item @(Model.ProductList.Pagination.Page == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.ProductList.Pagination.Page - 1)"
                   asp-route-category="@(Model.CategoryName)">
                    &laquo;
                </a>
            </li>

            @for (int i = 1; i <= Model.ProductList.Pagination.PageCount; i++)
            {
                <li class="page-item @(Model.ProductList.Pagination.Page == i ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-category="@(Model.CategoryName)">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.ProductList.Pagination.Page == Model.ProductList.Pagination.PageCount ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.ProductList.Pagination.Page + 1)"
                   asp-route-category="@(Model.CategoryName)">
                    &raquo;
                </a>
            </li>
        </ul>
    </nav>
</div>


<style>
    /* Hover ефект для карточок */
    .card:hover {
        transform: translateY(-5px);
        transition: 0.3s;
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    /* Обмежуємо висоту тексту опису і додаємо крапки, якщо довгий */
    .card-text {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Кнопки категорій */
    .btn-outline-success:hover {
        background-color: #28a745;
        color: #fff;
        transition: 0.3s;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: #fff;
        transition: 0.3s;
    }
</style>
