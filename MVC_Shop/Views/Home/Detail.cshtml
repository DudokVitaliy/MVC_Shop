@model MVC_Shop.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5 text-center">
            <img src="~/images/@(string.IsNullOrEmpty(Model.Image) ? "No_Image_Available.jpg" : Model.Image)"
                 alt="@Model.Name"
                 class="img-fluid rounded shadow-sm border"
                 style="max-height: 400px; object-fit: contain;">
        </div>

        <div class="col-md-6">
            <h2 class="fw-bold mb-3">@Model.Name</h2>
            <p class="text-muted mb-1"><strong>Категорія:</strong> @Model.Category?.Name</p>

            <p class="mt-3">@Model.Description</p>

            <h3 class="text-success fw-bold mb-3">@Model.Price ₴</h3>

            @if (Model.Count > 0)
            {
                <p class="text-success fw-semibold">Є в наявності (@Model.Count шт.)</p>
                <button class="btn btn-primary btn-lg px-4">
                    <i class="bi bi-bag-plus"></i> Додати у кошик
                </button>
            }
            else
            {
                <p class="text-danger fw-semibold">Немає в наявності</p>
                <button class="btn btn-secondary btn-lg px-4" disabled>
                    <i class="bi bi-bag-x"></i> Недоступно
                </button>
            }

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-outline-dark">
                    <i class="bi bi-arrow-left"></i> Повернутися до списку
                </a>
            </div>
        </div>
    </div>
</div>
