@model UpdateProductVM
@{
    ViewData["Title"] = "Редагування товару";
}

<div class="w-50 m-auto border-2 p-2">
    <h1 class="text-center">Редагування товару</h1>
    <form class="w-75 m-auto" asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="mb-3 mt-3 row">
            <input type="hidden" asp-for="Id" />
            <label>Назва</label>
            <div>
                <input type="text" class="form-control" asp-for="Name" />
            </div>
            <div style="color: red;" class="form-text ms-1">
                <span asp-validation-for="Name"></span>
            </div>
            <div style="color: red;" class="form-text ms-1">
                <span asp-validation-for="UniqueNameError"></span>
            </div>
            <label>Поточне зображення</label>
            <div class="mb-2">
                <img src="~/images/@Model.Image" alt="@Model.Name" width="150" class="rounded border" />
            </div>

            <label>Нове зображення (необов'язково)</label>
            <input type="file" class="form-control" asp-for="NewImage" accept="image/*" />
            <label>Категорія</label>
            <div>
                <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <label>Опис</label>
            <div>
                <input type="text" class="form-control" asp-for="Description" />
            </div>
            <label>Ціна</label>
            <div>
                <input type="number" class="form-control" asp-for="Price" />
            </div>
            <div style="color: red;" class="form-text ms-1">
                <span asp-validation-for="Price"></span>
            </div>
            <label>Кількість</label>
            <div>
                <input type="number" class="form-control" asp-for="Count" />
            </div>
            <div style="color: red;" class="form-text ms-1">
                <span asp-validation-for="Count"></span>
            </div>
        </div>
        <div class="m-2 d-flex p-1">
            <input type="submit" value="Зберегти" class="flex-grow-1 m-1 btn btn-success" />
            <a asp-action="Index" class="flex-grow-1 m-1 btn btn-dark">Повернутися</a>
        </div>
    </form>
</div>